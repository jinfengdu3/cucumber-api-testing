<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!-- Kindly provided by SpringBoot: https://docs.spring.io/spring-boot/docs/current/reference/html/howto.html#howto-configure-logback-for-logging -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <appender name="CUCUMBER" class="name.lattuada.trading.tests.utils.CucumberLogAppender">
        <encoder>
            <pattern>%date %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    
    <root level="TRACE">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="CUCUMBER" />
    </root>

</configuration>